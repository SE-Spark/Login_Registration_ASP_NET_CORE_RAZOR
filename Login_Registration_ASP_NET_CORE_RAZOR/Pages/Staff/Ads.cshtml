@page
@model Login_Registration_ASP_NET_CORE_RAZOR.Pages.Staff.AdsModel
@{
    ViewData["Title"] = "Ads";
}
<h1>Ads</h1>
<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-12 col-lg-4">
            <form method="post">
                @Model.staffs.FirstName
                @Model.Msg

                <div asp-validation-summary="All" class="text-center"></div>
                <div class="mb-3">
                    <label class="col-form-label" asp-for="@Model.staffs.FirstName">Enter FirstName</label>
                    <input type="text" class="form-control" asp-for="@Model.staffs.FirstName" />
                    <span asp-validation-for="@Model.staffs.FirstName" class="alert-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="col-form-label" asp-for="@Model.staffs.LastName">LastName</label>
                    <input type="text" class="form-control" asp-for="@Model.staffs.LastName" />
                    <span asp-validation-for="@Model.staffs.LastName" class="alert-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="col-form-label" asp-for="@Model.staffs.Email">Email</label>
                    <input type="Email" class="form-control" asp-for="@Model.staffs.Email" />
                    <span asp-validation-for="@Model.staffs.Email" class="alert-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="col-form-label" asp-for="@Model.staffs.Gender">Gender</label>
                    @*@Html.DropDownListFor(m => m.staffs.Gender, Html.GetEnumSelectList<Model.Gender>(), "Select", new { @class = "form-control" })*@
                    <select type="text" class="custom-select mr-sm-2 " asp-for="@Model.staffs.Gender" asp-items="@Html.GetEnumSelectList<Model.Gender>()"></select>
                    <span asp-validation-for="@Model.staffs.Gender" class="alert-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="col-form-label" asp-for="@Model.staffs.MaritalStatus">Marital Status</label>
                    <select type="text" class="form-control" asp-for="@Model.staffs.MaritalStatus" value="" asp-items="@new SelectList(Enum.GetNames(typeof(Model.MaritalStatus)))"></select>
                    <span asp-validation-for="@Model.staffs.MaritalStatus" class="alert-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="col-form-label" asp-for="@Model.staffs.Role">Role</label>
                    <input type="text" class="form-control" asp-for="@Model.staffs.Role" />
                    <span asp-validation-for="@Model.staffs.Role" class="alert-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="col-form-label" asp-for="@Model.staffs.DOR">Date OF Registration</label>
                    <input type="date" class="form-control" asp-for="@Model.staffs.DOR" />
                    <span asp-validation-for="@Model.staffs.DOR" class="alert-danger"></span>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>

                @section scripts{
                    <partial name="_ValidationScriptsPartial" />
                }
            </form>
        </div>
    </div>
</div>

